{
  "name": "rpi-tools-cron",
  "version": "1.0.0",
  "description": "Raspberry Pi 3 Cron",
  "maintainers": [
    "Kirill Molchanov <k03.mad@gmail.com"
  ],
  "repository": "k03mad/rpi-tools-cron",
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "app-root-path": "2.2.1",
    "forever": "1.0.0",
    "node-cron": "2.0.3",
    "node-routeros": "1.6.2",
    "oui": "10.0.4",
    "require-all": "3.0.0",
    "speedtest-net": "1.5.1",
    "utils-mad": "1.8.9"
  },
  "devDependencies": {
    "eslint": "5.16.0",
    "eslint-config-k03mad": "2.4.1",
    "eslint-plugin-const-case": "1.0.4",
    "eslint-plugin-jsdoc": "7.2.3",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-optimize-regex": "1.1.6",
    "eslint-plugin-promise": "4.1.1",
    "eslint-plugin-sort-requires": "2.1.0",
    "eslint-plugin-unicorn": "9.0.0",
    "pre-commit": "1.2.2"
  },
  "scripts": {
    "cron": "npm run stop && npm run start",
    "clean": "rm -rf ./node_modules || true",
    "clean:log": "rm -rf ./forever.log || true",
    "lint": "eslint --report-unused-disable-directives ./ --format codeframe && echo '\n\\033[34mESLinted!\\033[39m\n'",
    "setup": "npm i && npm run clean:log",
    "start": "forever start -a --uid rpicron --minUptime 1000 --spinSleepTime 10000 -l ../git/rpi-tools-cron/forever.log app/cron.js",
    "stop": "forever stop -t rpicron || true",
    "task": "node runner.js"
  },
  "pre-commit": [
    "lint"
  ],
  "license": "Unlicense"
}
