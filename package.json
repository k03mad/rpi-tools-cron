{
  "name": "rpi-tools-cron",
  "version": "0.0.1",
  "description": "Raspberry Pi 3 Cron",
  "maintainers": [
    "Kirill Molchanov <k03.mad@gmail.com"
  ],
  "repository": "k03mad/rpi-tools-cron",
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "forever": "0.15.3",
    "json-parse-better-errors": "1.0.2",
    "node-cron": "2.0.3",
    "require-all": "3.0.0",
    "utils-mad": "1.2.6"
  },
  "devDependencies": {
    "eslint": "5.12.1",
    "eslint-config-k03mad": "2.1.1",
    "eslint-plugin-const-case": "1.0.4",
    "eslint-plugin-jsdoc": "4.1.0",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-optimize-regex": "1.1.6",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-sort-requires": "2.1.0",
    "eslint-plugin-unicorn": "7.1.0",
    "pre-commit": "1.2.2"
  },
  "scripts": {
    "cron": "npm run stop && npm run start",
    "clean": "rm -rf ./node_modules || true",
    "clean:log": "rm -rf ./forever.log || true",
    "lint": "eslint --report-unused-disable-directives ./ --cache --format codeframe && echo '\n\\033[34mESLinted!\\033[39m\n'",
    "setup": "npm i && npm run clean:log",
    "start": "forever start -a --uid rpicron --minUptime 1000 --spinSleepTime 10000 -l ../git/rpi-tools-cron/forever.log index.js",
    "stop": "forever stop -t rpicron || true"
  },
  "pre-commit": [
    "lint"
  ],
  "license": "Unlicense"
}
